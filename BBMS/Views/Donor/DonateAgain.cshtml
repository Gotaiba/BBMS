
@{
    ViewBag.Title = "DonateAgain";
}

<h2 class="page-title">Donate</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="form-group">
                @Html.Label("Donate Type", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="radio-inline">
                        @Html.RadioButton("DonateType", "V",false, new { id = "patient_false" })
                        Volunter
                    </div>
                    <div class="radio-inline">
                        @Html.RadioButton("DonateType", "P",false, new { id = "patient_true" })
                        For Patient
                    </div>
                    @Html.ValidationMessage("DonateType", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="collapse" id="patient">
                <div class="form-group">
                    @Html.Label("Patient Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("Patiant_Name",null, new { @class = "form-control", id = "pName" })
                        @Html.ValidationMessage("Patiant_Name", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Patient Relation", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Patient_Relation_No", null, "[Select]", htmlAttributes: new { @class = "form-control", id = "pddl" })
                        @Html.ValidationMessage("Patient_Relation_No", "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Donate" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">

    $(function () {
        var qsel = document.querySelector("#patient");
        $("#patient_false").click(function () {
            qsel.classList.remove("show");
            qsel.classList.add("hide");
            $("#pName").val("");
            $("#pddl").val("");
        });
        $("#patient_true").click(function () {
            qsel.classList.remove("hide");
            qsel.classList.add("show");
        });
        $("#dp").datepicker({
            multidate: true
        });
    });
</script>
