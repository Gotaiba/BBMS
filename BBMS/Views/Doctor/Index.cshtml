@using BBMS.Models
@model IEnumerable<Donor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Search</h4>
        <hr />
        <div class="input-group">
            <input type="text" name="NationalId" placeholder="Search..." class="form-control" aria-label="...">
            <div class="input-group-btn">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
        if (Model != null)
        {
            foreach (Donor d in Model)
            {
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.First_Name)
                    </dt>

                    <dd>
                        @d.First_Name
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Last_Name)
                    </dt>

                    <dd>
                        @d.Last_Name
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.National_ID)
                    </dt>

                    <dd>
                        @d.National_ID
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Donate_Type)
                    </dt>

                    <dd>
                        @d.Donate_Type
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Patient_Name)
                    </dt>

                    <dd>
                        @d.Patient_Name
                    </dd>
                </dl>
            }
            <a href="/Donor/Details/@Model.FirstOrDefault().Donar_Id" class="btn btn-primary">Donate</a>
        }
    }