@using BBMS.Models
@model IEnumerable<Donor>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-title">Applied Donors</h2>

@using (Html.BeginForm())
{
     <div class="form-horizontal">
        <hr />
         <div class="row">
             <div class="col-md-3">
                 <div class="input-group">
                     <input type="text" name="NationalId" placeholder="Search..." class="form-control" aria-label="...">
                     <span class="input-group-btn">                   
                         <input type="submit" value="Search" class="btn btn-default" />
                     </span>
                 </div>
             </div>
         </div>
         <br />
         <br />      
    </div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>National ID</th>
            <th>Donate Type</th>
            <th></th>
        </tr> 
        @{ 
            if(Model.Count()>0)
            {
                foreach(var item  in Model)
                {
                    <tr>
                        <td>@item.First_Name @item.Last_Name</td>
                        <td>@item.National_ID</td>
                        <td>
                            @if (item.Donate_Type == "V")
                        {
                                <span>Volunteer</span>
                            }
                            else
                            {
                                <span>For Patient</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("QuestionForm",new {Donor_No=item.Donar_Id })" class="btn btn-sm btn-success">Donate <i class="glyphicon glyphicon-heart" style="color:#b22c2c"></i></a>                        
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        <div class="alert alert-info">--No Records Available--+</div>
                    </td>
                </tr>
            }
        }

        </table>            
}
   