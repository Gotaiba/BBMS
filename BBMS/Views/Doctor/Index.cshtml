@using BBMS.Models
@model IEnumerable<Donor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
     <div class="form-horizontal">
        <h4>Search</h4>
        <hr />
        <div class="input-group">
            <input type="text" name="NationalId" placeholder="Search..." class="form-control" aria-label="...">
            <div class="input-group-btn">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>National ID</th>
            <th>Donate Type</th>
            <th></th>
        </tr> 
        @{ 
            if(Model.Count()>0)
            {
                foreach(var item  in Model)
                {
                    <tr>
                        <td>@item.First_Name @item.Last_Name</td>
                        <td>@item.National_ID</td>
                        <td>@item.Donate_Type               
                        </td>
                        <td>
                            @Html.ActionLink("Donate", "QuestionForm",new {Donor_No=item.Donar_Id })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        <div class="alert alert-info">--No Records Available--+</div>
                    </td>
                </tr>
            }
        }

        </table>            
}
   