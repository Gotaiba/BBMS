@model BBMS.Models.Donor_Information

@{
    ViewBag.Title = "QuestionForm";
}

<h2 class="page-title">Questions Form</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @{
            if (ViewBag.data == null)
            {
                <div class="alert alert-warning hide">@ViewBag.data <span class="glyphicon glyphicon-thumbs-down"></span></div>
            }
            else
            {
                <div class="alert alert-warning show">@ViewBag.data <span class="glyphicon glyphicon-thumbs-down"></span></div>
            }
        }    
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Surgery,"Did you have Surgery in the Last 2 Years?", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <div class="checkbox">
            
                    @Html.CheckBox("Surgery", htmlAttributes: new { @class="group" })
                    @Html.ValidationMessageFor(model => model.Surgery, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Blood_pressure,"Do you suffer form Blood Pressure?", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">  
                <div class="checkbox">
                  
                    @Html.CheckBox("Blood_pressure", htmlAttributes: new { @class = "group" })
                    @Html.ValidationMessageFor(model => model.Blood_pressure, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Blood_Diabetes, "Do you suffer form Blood Diabetes?", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <div class="checkbox">
                    @Html.CheckBox("Blood_Diabetes", htmlAttributes: new { @class = "group" })
                    @Html.ValidationMessageFor(model => model.Blood_Diabetes, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Heart_Disease, "Do you suffer form Heart Disease?", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <div class="checkbox">
                    @Html.CheckBox("Heart_Disease", htmlAttributes: new { @class = "group" })
                    @Html.ValidationMessageFor(model => model.Heart_Disease, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Medicine,"Do you take any kind of Medicine at the moment?", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <div class="checkbox">
                    @Html.CheckBox("Medicine")
                    @Html.ValidationMessageFor(model => model.Medicine, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Medicine_Text, "If yes What kind of Medicine?", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">               
                    @Html.TextAreaFor(model => model.Medicine_Text,5,50, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Medicine_Text, "", new { @class = "text-danger" })            
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Smoker,"Did you Somke or Smoked within two Hours?", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <div class="checkbox">
                    @Html.CheckBox("Smoker")
                    @Html.ValidationMessageFor(model => model.Smoker, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Other_Problems,"Other Problems", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <div class="checkbox">
                    @Html.CheckBox("Other_Problems",htmlAttributes:new { id="otherProp"})
                    @Html.ValidationMessageFor(model => model.Other_Problems, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Other_Problems_Text,"Other Problem Description", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.TextAreaFor(model => model.Other_Problems_Text,5,50, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Other_Problems_Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Weight, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-3">
                <div class="input-group">
                    @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })                   
                    <span class="input-group-addon" id="basic-addon2">Kg.</span>                  
                </div> 
                @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })         
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" value="Proceed" id="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
