
@{
    ViewBag.Title = "Collected";
}

<h2>Collected Blood</h2>
@using BBMS.Models
@model IEnumerable<Collected_Blood>

<table class="table table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Blood Type</th>
        <th>National Id</th>
        <th>Reasons</th>
        <th></th>
    </tr>
        @{
            if (Model.Count() > 0)
            {
                foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Donor.First_Name &nbsp; @x.Donor.Last_Name</td>
                        <td>@x.Blood_Type.Type_Name</td>
                        <td>@x.Donor.National_ID</td>
                        <td>@x.Reason</td>
                        <td>
                            @Html.ActionLink("Enter Virus","Virus",new { ColId=x.ColIection_Id })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        <div class="alert alert-info">--No Records Available--+</div>
                    </td>
                </tr>
            }
        }
   
</table>