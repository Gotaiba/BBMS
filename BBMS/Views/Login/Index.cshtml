
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using(Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Login</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-lg-2">Username:</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" required name="Username" placeholder="Enter Username" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-lg-2">Password:</label>
            <div class="col-lg-10">
                <input type="password" class="form-control" required name="Password" placeholder="Enter Password" />
            </div>
        </div>
        <div class="col-lg-offset-2 col-lg-3 text-danger" style="margin-bottom:10px">
            @ViewBag.data
        </div>  
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-9">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
